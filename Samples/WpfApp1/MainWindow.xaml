<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:kanban="clr-namespace:KC.WPF_Kanban;assembly=WPF-Kanban"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <kanban:KanbanBoard Title="My Board">
        <kanban:KanbanBoard.Columns>
            <kanban:KanbanColumn Caption="Backlog" IsCollapsed="False" />
            <kanban:KanbanColumn Caption="Requested" />
            <kanban:KanbanColumn Caption="In progress" ColumnSpan="3">
                <kanban:KanbanColumn.Columns>
                    <kanban:KanbanColumn Caption="Design" />
                    <kanban:KanbanColumn Caption="Doing" ColumnSpan="2" />
                </kanban:KanbanColumn.Columns>
            </kanban:KanbanColumn>
            <kanban:KanbanColumn Caption="Done" />
        </kanban:KanbanBoard.Columns>
    </kanban:KanbanBoard>
</Window>
